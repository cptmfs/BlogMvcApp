@model IEnumerable<BlogMvcApp.Models.BlogModel>


@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Kayıt Bulunamadı.</h3>
    </div>
}
else
{
    foreach (var blog in Model)
    {
        <div class="blog">
            <h3 class="page-header">
                @blog.Baslik
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @blog.EklenmeTarihi
            </p>

            <img class="img-responsive" src="https://urbandigital.net/wp-content/uploads/2019/03/software-developer-vs-software-engineer-900x300.jpg" alt="">
            <hr />
            <p>
                @blog.Aciklama
            </p>
            @Html.ActionLink("Daha Fazla..", "Details", "Blog", new { id = blog.Id }, new { @class = "btn btn-primary" })
        </div>
    }
}
